<Window x:Class="werty.Windows.ChangeMinCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:werty.Windows"
        mc:Ignorable="d"
        Title="Изменение минимального количества"
        WindowStartupLocation="CenterScreen"
        MinHeight="350"
        MinWidth="300"
        Height="350"
        Width="300"
        FontFamily="{StaticResource MainFont}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Новое количество"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="25" />
        <TextBox x:Name="NewCountTextBox"
                 Grid.Row="1"
                 Margin="35" />
        <Button x:Name="ChangeCountButton"
            Grid.Row="2"
                Margin="30"
                Background="{StaticResource AccentColor}"  Click="ChangeCountButton_Click" Content="Изменить"/>
    </Grid>
</Window>
